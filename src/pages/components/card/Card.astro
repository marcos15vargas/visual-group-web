---
interface Props{
    id: string;
    title: string;
    subtitle: string;
    image: string;
}
const { id, title, subtitle, image } = Astro.props;
---
<section id={id} class="max-w-smborder rounded-lg shadow-sm bg-[#212121] ">
    <div class="h-36 w-auto overflow-hidden rounded-t-lg">
        <img class="rounded-t-lg object-cover" src={image} alt={title} />
    </div>

    <div class="p-5">
        <h5 class="mb-2 font-bold tracking-tight text-gray-900 dark:text-white">{title}</h5>
        <p class="mb-3 text-sm text-gray-700 dark:text-gray-400">{subtitle}</p>
        <a href="#" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center rounded-lg bg-primary hover:bg-primary/45 focus:ring-4 focus:ring-secondary/50">
            Ver mas
            <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
        </a>
    </div>
</section>