---
interface Props {
  title: string;
  image: string;
  id: string;
}
const { id, title, image,  } = Astro.props;
---


<button id="button" data-modal-target={id} data-modal-toggle={id} class="w-80 flex flex-col items-center relative rounded-md overflow-hidden hover:cursor-pointer hover:scale-105 transition-all duration-300 shadow-lg shadow-gray-900/50">
    <img src={image} alt="">
    <h3 class="absolute bottom-2 text-white z-25 font-bold text-xl">{title}</h3>
    <div class="absolute bottom-0 left-0 right-0 h-full bg-gradient-to-b from-transparent via-transparent to-gray-900"></div>
</button>

<script>
    const button = document.querySelector('#button');

    button?.addEventListener('click', (e) => {
        e.preventDefault();
    });
</script>