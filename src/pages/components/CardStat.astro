---
interface Props {
    number: string;
    title: string;
}

const {number, title} = Astro.props
---



<div class="flex flex-col items-center justify-center border-3 border-primary rounded-lg p-4 text-center w-[150px]">
    <h2 class="text-3xl font-bold">{number}</h2>
    <p class="text-sm">{title}</p>
</div>